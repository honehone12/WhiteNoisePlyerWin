<Window x:Name="PlayerWindow" x:Class="WhiteNoisePlayerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhiteNoisePlayerGUI"
        mc:Ignorable="d"
        Title="WhiteNoisePlayer" Height="200" Width="200" ResizeMode="NoResize" Closing="PlayerWindow_Closing">
    <Grid>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Height="25" Margin="0,130,0,0" Click="QuitButton_Click"/>
        <Label x:Name="AppLabel" Content="Welcome to WhiteNoisePlayer !!" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Center" VerticalAlignment="Center" Width="164" Maximum="1" LargeChange="0.1" SmallChange="0.01" Value="1" ValueChanged="VolumeSlider_ValueChanged"/>
        <Label x:Name="VolumeLabel" Content="Volume" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" FontSize="10" Width="44" Height="25"/>

    </Grid>
</Window>
